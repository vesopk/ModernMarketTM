@page

@model AddModel

@{
    ViewData["Title"] = "Добави стока";
}

<h2 class="mt-3 text-center">Изберете стока, която искате да заредите.</h2>

<div class="row">
    @foreach (var instance in Model.Items)
    {
        <div class="col-3">
            <form method="post">
                <div class="card mt-5">
                    <img class="card-img" src="@instance.PictureUrl" style="height: 350px">
                    <div class="card-body">
                        <p class="card-text text-center text-secondary">@instance.Name</p>
                        <p class="card-text text-center text-secondary">@instance.Quantity броя</p>
                        <input asp-for="Input.Quantity" class="form-control" />
                        <input asp-for="Input.CategoryId" hidden="hidden" value="@instance.Id"/>
                    </div>
                    <input type="submit" value="Зареди" class="btn btn-success text-center"/>
                </div>
            </form>
        </div>
    }
</div>