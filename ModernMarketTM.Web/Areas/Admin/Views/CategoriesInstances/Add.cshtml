@model AddCategoryInstanceViewModel
@{
    ViewData["Title"] = $"Добавяне на {Model.Name}";
}

<h2 class="mt-3">@ViewData["Title"]</h2>

<form class="mt-3 col-6" method="post" asp-action="Add" asp-controller="CategoriesInstances">
    <div class="form-group">
        <label for="name">Име</label>
        <input type="text" class="form-control" id="name" name="Name">
        <span class="text-danger">@Html.ValidationMessage("Name")</span>
        <input type="text" class="form-control" name="CategoryId" hidden="hidden" value="@Model.Id">
    </div>
    <div class="form-group">
        <label for="slug">Наставка</label>
        <input type="text" class="form-control" id="slug" name="Slug">
        <span class="text-danger">@Html.ValidationMessage("Slug")</span>
        <input type="text" class="form-control" name="CategorySlug" hidden="hidden" value="@Model.Slug">
    </div>
    <div class="form-group">
        <label for="url">Линк към снимка</label>
        <input type="text" class="form-control" id="url" name="PictureUrl">
        <span class="text-danger">@Html.ValidationMessage("PictureUrl")</span>
    </div>
    <div class="form-group">
        <label for="price">Цена</label>
        <input type="number" class="form-control" id="price" name="Price">
        <span class="text-danger">@Html.ValidationMessage("Price")</span>
    </div>
    <div class="form-group">
        <label for="description">Описание</label>
        <textarea name="Description" id="description" class="form-control"></textarea>
        <span class="text-danger">@Html.ValidationMessage("Description")</span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-warning" value="Създаване">
    </div>
</form>

