@using Microsoft.AspNetCore.Identity
@using ModernMarketTM.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="/logo.ico" />

    <link href="~/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
</head>
<body style="background: #EEEEEC">
    <div class="navbar-light">
        <nav class="navbar navbar-expand navbar-light bg-light">
            <div class="navbar-brand">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Private Modern Market TM</a>
            </div>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Начало</a></li>
                <li class="nav-item active"><a class="nav-link" asp-page="/About">За нас</a></li>
                <li class="nav-item active"><a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Details">История</a></li>
                @if (this.User.IsInRole("Admin"))
                {
                    <li class="nav-item active"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Админ</a></li>
                }
                @if (this.User.IsInRole("Supplier"))
                {
                    <li class="nav-item active"><a class="nav-link" asp-area="Supplier" asp-page="/Supply/Index">Доставчик</a></li>
                }
            </ul>

            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="form-inline">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                        <li class="nav-item active"><a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index"><i class="fas fa-shopping-cart mr-1"></i>Количка</a></li>
                        @{
                            var user = await UserManager.GetUserAsync(User);
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей, @user.FullName!</a>
                        }
                        </li>
                        <li class="nav-item">
                            <button type="submit" class="btn btn-link navbar-btn nav-link">Излез</button>
                        </li>
                    </ul>
                </form>
            }
            else
            {

                <ul class="navbar-nav">
                    <li class="nav-item active"><a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index"><i class="fas fa-shopping-cart mr-1"></i>Количка</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Регистрация</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Влез</a></li>
                </ul>
            }
        </nav>
    </div>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Private Modern Market TM</p>
        </footer>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
